<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./stylesheets/style.css" />

    <title>User management</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-auto min-h-full bg-zinc-900 text-white p-10">
      <div class="nav mb-10 text-blue-500">
        <a href="/">Create a new user</a>
      </div>
      <h1 class="text-3xl mb-3 tracking-tighter">All users</h1>

      <div class="users flex flex-wrap gap-2">
        <% if(users.length>0){%> <% users.forEach(function(user){ %>
        <div
          class="user w-72 p-5 bg-zinc-800 rounded-lg border border-transparent hover:border-blue-500 transition-border duration-300 ease-in"
        >
          <div class="w-full h-60 bg-zinc-500 rounded-lg">
            <img
              class="w-full h-full object-cover overflow-hidden object-top"
              src="<%= user.image%>"
              alt=""
            />
          </div>
          <h3 class="tracking-tighter text-xl mt-3"><%= user.name%></h3>
          <h5 class="text-zinc-500"><%= user.email%></h5>

          <div class="flex gap-3 mt-5">
            <a class="text-zinc-500" href="/edit/<%=user._id %>">Edit user</a>
            <a class="text-red-500" href="/delete/<%= user._id %>"
              >Delete user</a
            >
          </div>
        </div>

        <% }) %> <%} else{%>
        <h1 class="text-gray-500 text-xl">No users yet!</h1>

        <%} %>
      </div>
    </div>
  </body>
</html>
